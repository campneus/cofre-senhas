<%- include('layout', { body: `
<div class="page-header">
  <div>
    <h1 class="page-title">Dashboard</h1>
    <p class="page-subtitle">Bem-vindo ao Cofre de Senhas Campneus</p>
  </div>
</div>

<div class="dashboard-stats">
  <div class="stat-card">
    <div class="stat-icon" style="background-color: #3498db;">
      <i class="fas fa-building"></i>
    </div>
    <div class="stat-info">
      <h3 id="prefeituras-count">0</h3>
      <p>Prefeituras</p>
    </div>
  </div>

  <div class="stat-card">
    <div class="stat-icon" style="background-color: #2ecc71;">
      <i class="fas fa-truck"></i>
    </div>
    <div class="stat-info">
      <h3 id="fornecedores-count">0</h3>
      <p>Fornecedores</p>
    </div>
  </div>

  <div class="stat-card">
    <div class="stat-icon" style="background-color: #f39c12;">
      <i class="fas fa-landmark"></i>
    </div>
    <div class="stat-info">
      <h3 id="orgaos-count">0</h3>
      <p>Órgãos Governamentais</p>
    </div>
  </div>

  <div class="stat-card">
    <div class="stat-icon" style="background-color: #e74c3c;">
      <i class="fas fa-car"></i>
    </div>
    <div class="stat-info">
      <h3 id="b2fleet-count">0</h3>
      <p>B2Fleet e Locadoras</p>
    </div>
  </div>
</div>

<div class="card">
  <div class="card-header">Acesso Rápido</div>
  <div class="card-body">
    <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(200px, 1fr)); gap: 15px;">
      <a href="/credentials?category=1" class="btn btn-primary" style="text-align: center; text-decoration: none;">
        <i class="fas fa-building"></i> Prefeituras
      </a>
      <a href="/credentials?category=2" class="btn btn-primary" style="text-align: center; text-decoration: none;">
        <i class="fas fa-truck"></i> Fornecedores
      </a>
      <a href="/credentials?category=3" class="btn btn-primary" style="text-align: center; text-decoration: none;">
        <i class="fas fa-landmark"></i> Órgãos Governamentais
      </a>
      <a href="/credentials?category=4" class="btn btn-primary" style="text-align: center; text-decoration: none;">
        <i class="fas fa-car"></i> B2Fleet e Locadoras
      </a>
      ${user.role === 'admin' ? 
        '<a href="/credentials/new/create" class="btn btn-primary" style="text-align: center; text-decoration: none;"><i class="fas fa-plus"></i> Nova Senha</a>' : 
        ''
      }
    </div>
  </div>
</div>

<div class="card">
  <div class="card-header">
    <i class="fas fa-clock"></i> TOP 5 Últimas Senhas Atualizadas
  </div>
  <div class="card-body">
    <div id="recent-credentials" style="min-height: 200px;">
      <div style="text-align: center; padding: 20px;">
        <i class="fas fa-spinner fa-spin"></i> Carregando...
      </div>
    </div>
  </div>
</div>

<script>
  // Fetch credential counts by category
  fetch('/api/stats')
    .then(response => response.json())
    .then(data => {
      document.getElementById('prefeituras-count').textContent = data.prefeituras || '0';
      document.getElementById('fornecedores-count').textContent = data.fornecedores || '0';
      document.getElementById('orgaos-count').textContent = data.orgaos || '0';
      document.getElementById('b2fleet-count').textContent = data.b2fleet || '0';
    })
    .catch(err => {
      console.error('Erro ao carregar estatísticas:', err);
    });

  // Fetch recent credentials
  fetch('/api/recent-credentials')
    .then(response => response.json())
    .then(data => {
      const container = document.getElementById('recent-credentials');
      if (data.length === 0) {
        container.innerHTML = '<div style="text-align: center; padding: 20px; color: #666;">Nenhuma senha encontrada</div>';
        return;
      }
      
      let html = '<div style="display: flex; flex-direction: column; gap: 10px;">';
      data.forEach((credential, index) => {
        const updatedDate = new Date(credential.updated_at).toLocaleString('pt-BR');
        html += `
          <div style="border: 1px solid #ddd; border-radius: 8px; padding: 15px; background: #f9f9f9;">
            <div style="display: flex; justify-content: space-between; align-items: center;">
              <div>
                <strong style="color: #333;">${credential.system_name}</strong>
                <div style="font-size: 0.9em; color: #666;">
                  <i class="fas fa-map-marker-alt"></i> ${credential.location_name || 'N/A'}
                  <span style="margin-left: 10px;">
                    <i class="fas fa-tag"></i> ${credential.category_name || 'N/A'}
                  </span>
                </div>
              </div>
              <div style="text-align: right; font-size: 0.85em; color: #888;">
                <div><i class="fas fa-clock"></i> ${updatedDate}</div>
              </div>
            </div>
          </div>
        `;
      });
      html += '</div>';
      container.innerHTML = html;
    })
    .catch(err => {
      console.error('Erro ao carregar credenciais recentes:', err);
      document.getElementById('recent-credentials').innerHTML = 
        '<div style="text-align: center; padding: 20px; color: #e74c3c;">Erro ao carregar dados</div>';
    });
</script>
` }) %>