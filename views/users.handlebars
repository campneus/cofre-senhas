<!-- views/users.handlebars -->
<div>
    <div class="flex justify-between items-center mb-6">
        <div>
            <h2 class="text-3xl font-bold text-gray-800 mb-2">Usuários</h2>
            <p class="text-gray-600">Gerencie os usuários do sistema</p>
        </div>
        <button 
            data-toggle="modal" 
            data-target="userModal" 
            class="bg-yellow-500 hover:bg-yellow-600 text-white px-6 py-3 rounded-lg transition duration-200 flex items-center space-x-2"
        >
            <i class="fas fa-user-plus"></i>
            <span>Novo Usuário</span>
        </button>
    </div>

    <div class="bg-white rounded-lg shadow-md">
        <div class="p-6 border-b border-gray-200">
            <div class="flex flex-col md:flex-row md:items-center md:justify-between space-y-4 md:space-y-0">
                <form action="/users" method="GET" class="flex space-x-4">
                    <div class="relative">
                        <input 
                            type="text" 
                            name="search" 
                            placeholder="Buscar por nome ou email..." 
                            class="pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500 focus:border-transparent"
                            value="{{search}}"
                        >
                        <i class="fas fa-search absolute left-3 top-3 text-gray-400"></i>
                    </div>
                    <select name="role" class="border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-yellow-500" onchange="this.form.submit()">
                        <option value="">Todos os tipos</option>
                        <option value="admin" {{#ifeq role "admin"}}selected{{/ifeq}}>Administradores</option>
                        <option value="manager" {{#ifeq role "manager"}}selected{{/ifeq}}>Gerentes</option>
                        <option value="user" {{#ifeq role "user"}}selected{{/ifeq}}>Usuários Padrão</option>
                    </select>
                    <select name="status" class="border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-yellow-500" onchange="this.form.submit()">
                        <option value="">Todos os status</option>
                        <option value="active" {{#ifeq status "active"}}selected{{/ifeq}}>Ativos</option>
                        <option value="inactive" {{#ifeq status "inactive"}}selected{{/ifeq}}>Inativos</option>
                    </select>
                    <button type="submit" class="bg-gray-200 hover:bg-gray-300 px-4 py-2 rounded-lg">
                        <i class="fas fa-filter mr-2"></i>Filtrar
                    </button>
                </form>
            </div>
        </div>

        <div class="overflow-x-auto">
            <table class="w-full">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nome</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tipo de Usuário</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Último Acesso</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ações</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {{#each users}}
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="flex items-center">
                                    <div class="flex-shrink-0 h-10 w-10 bg-yellow-500 rounded-full flex items-center justify-center text-white">
                                        {{firstLetter this.name}}
                                    </div>
                                    <div class="ml-4">
                                        <div class="text-sm font-medium text-gray-900">{{this.name}}</div>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm text-gray-900">{{this.email}}</div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                                    {{#ifeq this.role "admin"}}bg-purple-100 text-purple-800
                                    {{else}}{{#ifeq this.role "manager"}}bg-blue-100 text-blue-800
                                    {{else}}bg-green-100 text-green-800{{/ifeq}}{{/ifeq}}">
                                    {{#ifeq this.role "admin"}}Administrador
                                    {{else}}{{#ifeq this.role "manager"}}Gerente
                                    {{else}}Usuário Padrão{{/ifeq}}{{/ifeq}}
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                                    {{#if this.active}}bg-green-100 text-green-800{{else}}bg-red-100 text-red-800{{/if}}">
                                    {{#if this.active}}Ativo{{else}}Inativo{{/if}}
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                {{#if this.last_login}}
                                    {{formatDate this.last_login}}
                                {{else}}
                                    Nunca acessou
                                {{/if}}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
                                <button 
                                    onclick="editUser('{{this.id}}')" 
                                    class="text-yellow-600 hover:text-yellow-900"
                                    data-tooltip="Editar"
                                >
                                    <i class="fas fa-edit"></i>
                                </button>
                                {{#ifnoteq this.id ../currentUser.id}}
                                    <form action="/users/{{this.id}}/toggle-status?_method=PUT" method="POST" class="inline">
                                        <button 
                                            type="submit" 
                                            class="{{#if this.active}}text-red-600 hover:text-red-900{{else}}text-green-600 hover:text-green-900{{/if}}"
                                            data-tooltip="{{#if this.active}}Desativar{{else}}Ativar{{/if}}"
                                        >
                                            <i class="fas {{#if this.active}}fa-user-slash{{else}}fa-user-check{{/if}}"></i>
                                        </button>
                                    </form>
                                    <button 
                                        onclick="resetPassword('{{this.id}}')" 
                                        class="text-blue-600 hover:text-blue-900"
                                        data-tooltip="Redefinir Senha"
                                    >
                                        <i class="fas fa-key"></i>
                                    </button>
                                {{/ifnoteq}}
                            </td>
                        </tr>
                    {{/each}}
                    {{#unless users.length}}
                        <tr>
                            <td colspan="6" class="px-6 py-4 text-center text-gray-500">
                                Nenhum usuário encontrado.
                            </td>
                        </tr>
                    {{/unless}}
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- User Modal -->
<div id="userModal" class="fixed inset-0 bg-black bg-opacity-50 hidden z-50 flex items-center justify-center p-4">
    <div class="bg-white rounded-lg shadow-xl max-w-2xl w-full">
        <div class="p-6 border-b border-gray-200">
            <div class="flex justify-between items-center">
                <h3 class="text-xl font-semibold text-gray-800" id="userModalTitle">Novo Usuário</h3>
                <button data-dismiss="modal" class="text-gray-400 hover:text-gray-600">
                    <i class="fas fa-times text-xl"></i>
                </button>
            </div>
        </div>

        <form class="p-6 space-y-6" id="userForm" action="/users" method="POST" data-validate="true">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="form-label">Nome Completo</label>
                    <input name="name" type="text" class="form-input" placeholder="Nome do usuário" required>
                </div>

                <div>
                    <label class="form-label">Email</label>
                    <input name="email" type="email" class="form-input" placeholder="email@exemplo.com" required>
                </div>

                <div>
                    <label class="form-label">Tipo de Usuário</label>
                    <select name="role" class="form-select" required>
                        <option value="user">Usuário Padrão</option>
                        <option value="manager">Gerente</option>
                        <option value="admin">Administrador</option>
                    </select>
                </div>

                <div>
                    <label class="form-label">Status</label>
                    <select name="active" class="form-select">
                        <option value="true" selected>Ativo</option>
                        <option value="false">Inativo</option>
                    </select>
                </div>

                <div class="password-field">
                    <label class="form-label">Senha</label>
                    <div class="relative">
                        <input 
                            name="password" 
                            type="password" 
                            id="passwordInput" 
                            class="form-input pr-12"
                            placeholder="Senha" 
                            required
                        >
                        <button type="button" class="password-toggle">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                </div>

                <div class="password-field">
                    <label class="form-label">Confirmar Senha</label>
                    <div class="relative">
                        <input 
                            name="confirmPassword" 
                            type="password" 
                            id="confirmPasswordInput" 
                            class="form-input pr-12"
                            placeholder="Confirme a senha" 
                            required
                        >
                        <button type="button" class="password-toggle">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                </div>
            </div>

            <div class="flex justify-end space-x-4 pt-6 border-t border-gray-200">
                <button type="button" data-dismiss="modal" class="px-6 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition duration-200">
                    Cancelar
                </button>
                <button type="submit" class="px-6 py-2 bg-yellow-500 hover:bg-yellow-600 text-white rounded-lg transition duration-200">
                    Salvar Usuário
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Reset Password Modal -->
<div id="resetPasswordModal" class="fixed inset-0 bg-black bg-opacity-50 hidden z-50 flex items-center justify-center p-4">
    <div class="bg-white rounded-lg shadow-xl max-w-md w-full">
        <div class="p-6 border-b border-gray-200">
            <div class="flex justify-between items-center">
                <h3 class="text-xl font-semibold text-gray-800">Redefinir Senha</h3>
                <button data-dismiss="modal" class="text-gray-400 hover:text-gray-600">
                    <i class="fas fa-times text-xl"></i>
                </button>
            </div>
        </div>

        <form class="p-6 space-y-6" id="resetPasswordForm" action="/users/reset-password" method="POST" data-validate="true">
            <input type="hidden" name="userId" id="resetUserId">
            
            <div class="space-y-4">
                <div>
                    <label class="form-label">Nova Senha</label>
                    <div class="relative">
                        <input 
                            name="password" 
                            type="password" 
                            id="resetPasswordInput" 
                            class="form-input pr-12"
                            placeholder="Nova senha" 
                            required
                        >
                        <button type="button" class="password-toggle">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                </div>

                <div>
                    <label class="form-label">Confirmar Senha</label>
                    <div class="relative">
                        <input 
                            name="confirmPassword" 
                            type="password" 
                            id="resetConfirmPassword" 
                            class="form-input pr-12"
                            placeholder="Confirme a nova senha" 
                            required
                        >
                        <button type="button" class="password-toggle">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                </div>
            </div>

            <div class="flex justify-end space-x-4 pt-6 border-t border-gray-200">
                <button type="button" data-dismiss="modal" class="px-6 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition duration-200">
                    Cancelar
                </button>
                <button type="submit" class="px-6 py-2 bg-yellow-500 hover:bg-yellow-600 text-white rounded-lg transition duration-200">
                    Redefinir Senha
                </button>
            </div>
        </form>
    </div>
</div>

<script>
    // Edit user
    function editUser(id) {
        fetch(`/users/${id}`)
            .then(response => response.json())
            .then(data => {
                // Open the modal
                const modal = document.getElementById('userModal');
                modal.classList.remove('hidden');
                
                // Update title
                document.getElementById('userModalTitle').textContent = 'Editar Usuário';
                
                // Update form
                const form = document.getElementById('userForm');
                form.action = `/users/${id}?_method=PUT`;
                
                // Populate form fields
                form.querySelector('[name="name"]').value = data.name;
                form.querySelector('[name="email"]').value = data.email;
                form.querySelector('[name="role"]').value = data.role;
                form.querySelector('[name="active"]').value = data.active.toString();
                
                // Hide password fields for editing
                const passwordFields = form.querySelectorAll('.password-field');
                passwordFields.forEach(field => {
                    field.style.display = 'none';
                });
                
                // Remove required attribute from password fields
                form.querySelector('#passwordInput').removeAttribute('required');
                form.querySelector('#confirmPasswordInput').removeAttribute('required');
            })
            .catch(error => {
                console.error('Error fetching user:', error);
                alert('Erro ao carregar dados do usuário');
            });
    }
    
    // Reset password
    function resetPassword(id) {
        document.getElementById('resetUserId').value = id;
        document.getElementById('resetPasswordModal').classList.remove('hidden');
    }
    
    // Form validation
    document.addEventListener('DOMContentLoaded', function() {
        const userForm = document.getElementById('userForm');
        if (userForm) {
            userForm.addEventListener('submit', function(e) {
                const password = userForm.querySelector('[name="password"]');
                const confirmPassword = userForm.querySelector('[name="confirmPassword"]');
                
                // Skip validation if password fields are hidden (edit mode)
                if (password.parentElement.parentElement.style.display === 'none') {
                    return true;
                }
                
                if (password.value !== confirmPassword.value) {
                    e.preventDefault();
                    alert('As senhas não conferem!');
                    return false;
                }
                
                if (password.value.length < 8) {
                    e.preventDefault();
                    alert('A senha deve ter pelo menos 8 caracteres!');
                    return false;
                }
                
                return true;
            });
        }
        
        const resetForm = document.getElementById('resetPasswordForm');
        if (resetForm) {
            resetForm.addEventListener('submit', function(e) {
                const password = resetForm.querySelector('[name="password"]');
                const confirmPassword = resetForm.querySelector('[name="confirmPassword"]');
                
                if (password.value !== confirmPassword.value) {
                    e.preventDefault();
                    alert('As senhas não conferem!');
                    return false;
                }
                
                if (password.value.length < 8) {
                    e.preventDefault();
                    alert('A senha deve ter pelo menos 8 caracteres!');
                    return false;
                }
                
                return true;
            });
        }
    });
</script>