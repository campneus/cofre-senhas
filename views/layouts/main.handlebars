<!-- views/layouts/main.handlebars -->
<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free@6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body class="bg-gray-100 font-sans">
    <!-- Header -->
    <header class="bg-white shadow-lg border-b-4 border-yellow-500">
        <div class="flex items-center justify-between px-6 py-4">
            <div class="flex items-center space-x-4">
                <button id="sidebarToggle" class="lg:hidden text-gray-600 hover:text-yellow-600">
                    <i class="fas fa-bars text-xl"></i>
                </button>
                <div class="flex items-center space-x-3">
                    <div class="bg-yellow-500 p-2 rounded-lg">
                        <i class="fas fa-shield-alt text-white text-xl"></i>
                    </div>
                    <h1 class="text-2xl font-bold text-gray-800">Cofre Campneus</h1>
                </div>
            </div>
            
            {{#if user}}
                <div class="flex items-center space-x-6">
                    <div class="hidden md:block text-right">
                        <p class="text-sm text-gray-600">Bem-vindo,</p>
                        <p class="font-semibold text-gray-800" id="userName">{{user.name}}</p>
                        <p class="text-xs text-gray-500" id="lastAccess">Último acesso: {{formatDate user.last_login}}</p>
                    </div>
                    <form action="/logout" method="GET">
                        <button type="submit" id="logoutBtn" class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-lg transition duration-200 flex items-center space-x-2">
                            <i class="fas fa-sign-out-alt"></i>
                            <span>Logout</span>
                        </button>
                    </form>
                </div>
            {{/if}}
        </div>
    </header>

    <div class="flex min-h-screen">
        {{#if user}}
            <!-- Sidebar -->
            <aside id="sidebar" class="bg-gray-800 text-white w-64 min-h-screen sidebar-transition transform -translate-x-full lg:translate-x-0 fixed lg:relative z-30">
                <nav class="mt-8">
                    <div class="px-4 mb-8">
                        <div class="flex items-center space-x-3 p-3 bg-gray-700 rounded-lg">
                            <div class="w-10 h-10 bg-yellow-500 rounded-full flex items-center justify-center">
                                <i class="fas fa-user text-white"></i>
                            </div>
                            <div class="lg:block hidden">
                                <p class="font-semibold">{{user.name}}</p>
                                <p class="text-xs text-gray-400">{{user.role}}</p>
                            </div>
                        </div>
                    </div>

                    <ul class="space-y-2 px-4">
                        <li>
                            <a href="/" class="flex items-center space-x-3 p-3 rounded-lg hover:bg-gray-700 transition duration-200 menu-item">
                                <i class="fas fa-home text-yellow-400"></i>
                                <span>Home</span>
                            </a>
                        </li>
                        
                        <li>
                            <div class="flex items-center justify-between p-3 rounded-lg hover:bg-gray-700 transition duration-200 cursor-pointer" data-toggle="submenu" data-target="passwordsSubmenu">
                                <div class="flex items-center space-x-3">
                                    <i class="fas fa-key text-yellow-400"></i>
                                    <span>Cofre de Senhas</span>
                                </div>
                                <i class="fas fa-chevron-down text-sm transform transition-transform duration-200 chevron-icon"></i>
                            </div>
                            <ul id="passwordsSubmenu" class="ml-8 mt-2 space-y-1 hidden">
                                <li><a href="/passwords/category/prefeituras" class="block p-2 rounded hover:bg-gray-700 transition duration-200">Prefeituras</a></li>
                                <li><a href="/passwords/category/fornecedores" class="block p-2 rounded hover:bg-gray-700 transition duration-200">Fornecedores</a></li>
                                <li><a href="/passwords/category/orgaos" class="block p-2 rounded hover:bg-gray-700 transition duration-200">Órgãos Governamentais</a></li>
                                <li><a href="/passwords/category/b2fleet" class="block p-2 rounded hover:bg-gray-700 transition duration-200">B2Fleet e Locadoras</a></li>
                                <li><a href="/passwords" class="block p-2 rounded hover:bg-gray-700 transition duration-200">Todas as Senhas</a></li>
                            </ul>
                        </li>

                        <li>
                            <a href="/locations" class="flex items-center space-x-3 p-3 rounded-lg hover:bg-gray-700 transition duration-200 menu-item">
                                <i class="fas fa-map-marker-alt text-yellow-400"></i>
                                <span>Localidades</span>
                            </a>
                        </li>

                        {{#if (ifeq user.role 'admin')}}
                            <li>
                                <a href="/users" class="flex items-center space-x-3 p-3 rounded-lg hover:bg-gray-700 transition duration-200 menu-item">
                                    <i class="fas fa-users text-yellow-400"></i>
                                    <span>Usuários</span>
                                </a>
                            </li>
                        {{/if}}
                    </ul>
                </nav>
            </aside>

            <!-- Overlay for mobile -->
            <div id="sidebarOverlay" class="fixed inset-0 bg-black bg-opacity-50 z-20 lg:hidden hidden"></div>
        {{/if}}

        <!-- Main Content -->
        <main class="flex-1 p-6">
            <!-- Flash Messages -->
            {{#if success_msg}}
                <div class="alert alert-success">
                    <i class="fas fa-check-circle mr-2"></i>
                    {{success_msg}}
                </div>
            {{/if}}

            {{#if error_msg}}
                <div class="alert alert-error">
                    <i class="fas fa-exclamation-circle mr-2"></i>
                    {{error_msg}}
                </div>
            {{/if}}

            {{#if error}}
                <div class="alert alert-error">
                    <i class="fas fa-exclamation-triangle mr-2"></i>
                    {{error}}
                </div>
            {{/if}}

            {{{body}}}
        </main>
    </div>

    <script src="/js/main.js"></script>
</body>
</html>