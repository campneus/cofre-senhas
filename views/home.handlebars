<!-- views/home.handlebars -->
<div>
    <div class="mb-8">
        <h2 class="text-3xl font-bold text-gray-800 mb-2">Dashboard</h2>
        <p class="text-gray-600">Visão geral do sistema de gerenciamento de senhas</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <div class="bg-white p-6 rounded-lg shadow-md border-l-4 border-yellow-500">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-gray-600 text-sm">Total de Senhas</p>
                    <p class="text-2xl font-bold text-gray-800">{{stats.totalPasswords}}</p>
                </div>
                <i class="fas fa-key text-yellow-500 text-2xl"></i>
            </div>
        </div>

        <div class="bg-white p-6 rounded-lg shadow-md border-l-4 border-blue-500">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-gray-600 text-sm">Prefeituras</p>
                    <p class="text-2xl font-bold text-gray-800">{{stats.prefeituraPasswords}}</p>
                </div>
                <i class="fas fa-building text-blue-500 text-2xl"></i>
            </div>
        </div>

        <div class="bg-white p-6 rounded-lg shadow-md border-l-4 border-green-500">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-gray-600 text-sm">Fornecedores</p>
                    <p class="text-2xl font-bold text-gray-800">{{stats.fornecedoresPasswords}}</p>
                </div>
                <i class="fas fa-truck text-green-500 text-2xl"></i>
            </div>
        </div>

        <div class="bg-white p-6 rounded-lg shadow-md border-l-4 border-red-500">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-gray-600 text-sm">Usuários Ativos</p>
                    <p class="text-2xl font-bold text-gray-800">{{stats.activeUsers}}</p>
                </div>
                <i class="fas fa-users text-red-500 text-2xl"></i>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <div class="bg-white p-6 rounded-lg shadow-md">
            <h3 class="text-lg font-semibold text-gray-800 mb-4">Acessos Recentes</h3>
            <div class="space-y-3">
                {{#each recentAccess}}
                    <div class="flex items-center justify-between p-3 bg-gray-50 rounded">
                        <div>
                            <p class="font-medium text-gray-800">{{this.system_name}}</p>
                            <p class="text-sm text-gray-600">Acessado por {{this.accessed_by}}</p>
                        </div>
                        <span class="text-xs text-gray-500">{{formatDate this.access_time}}</span>
                    </div>
                {{/each}}
                {{#unless recentAccess.length}}
                    <p class="text-gray-500 text-sm">Nenhum acesso recente registrado.</p>
                {{/unless}}
            </div>
        </div>

        <div class="bg-white p-6 rounded-lg shadow-md">
            <h3 class="text-lg font-semibold text-gray-800 mb-4">Senhas que Expiram em Breve</h3>
            <div class="space-y-3">
                {{#each expiringPasswords}}
                    <div class="flex items-center justify-between p-3 rounded {{#if (isExpiringSoon this.expiry_date)}}bg-red-50 border-l-4 border-red-400{{else}}bg-yellow-50 border-l-4 border-yellow-400{{/if}}">
                        <div>
                            <p class="font-medium text-gray-800">{{this.system_name}}</p>
                            <p class="text-sm text-gray-600">
                                {{#if this.location}}
                                    {{this.location.name}} -
                                {{/if}}
                                Expira em {{daysUntil this.expiry_date}} dias
                            </p>
                        </div>
                        {{#if (isExpiringSoon this.expiry_date)}}
                            <i class="fas fa-exclamation-circle text-red-500"></i>
                        {{else}}
                            <i class="fas fa-exclamation-triangle text-yellow-500"></i>
                        {{/if}}
                    </div>
                {{/each}}
                {{#unless expiringPasswords.length}}
                    <p class="text-gray-500 text-sm">Nenhuma senha expirando nos próximos dias.</p>
                {{/unless}}
            </div>
        </div>
    </div>
</div>