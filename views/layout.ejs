<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'Cofre Campneus - Sistema de Gerenciamento de Senhas' %></title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free@6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <style>
        .submenu-enter {
            transform: translateY(-10px);
            opacity: 0;
        }
        .submenu-enter-active {
            transform: translateY(0);
            opacity: 1;
            transition: all 0.3s ease;
        }
        .sidebar-transition {
            transition: transform 0.3s ease-in-out;
        }
        .loading {
            display: none;
        }
        .loading.show {
            display: block;
        }
        .alert {
            padding: 1rem;
            margin: 1rem 0;
            border-radius: 0.5rem;
            border: 1px solid transparent;
        }
        .alert-success {
            background-color: #d1fae5;
            border-color: #a7f3d0;
            color: #065f46;
        }
        .alert-error {
            background-color: #fee2e2;
            border-color: #fecaca;
            color: #991b1b;
        }
        .alert-warning {
            background-color: #fef3c7;
            border-color: #fde68a;
            color: #92400e;
        }
        .modal {
            display: none;
            position: fixed;
            z-index: 1000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
        }
        .modal.show {
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .modal-content {
            background-color: white;
            padding: 2rem;
            border-radius: 0.5rem;
            max-width: 90%;
            max-height: 90%;
            overflow-y: auto;
        }
    </style>
</head>
<body class="bg-gray-100 font-sans">
    <!-- Header -->
    <header class="bg-white shadow-lg border-b-4 border-yellow-500">
        <div class="flex items-center justify-between px-6 py-4">
            <div class="flex items-center space-x-4">
                <button id="sidebarToggle" class="lg:hidden text-gray-600 hover:text-yellow-600">
                    <i class="fas fa-bars text-xl"></i>
                </button>
                <div class="flex items-center space-x-3">
                    <div class="bg-yellow-500 p-2 rounded-lg">
                        <i class="fas fa-shield-alt text-white text-xl"></i>
                    </div>
                    <h1 class="text-2xl font-bold text-gray-800">Cofre Campneus</h1>
                </div>
            </div>
            
            <div class="flex items-center space-x-6">
                <% if (user) { %>
                <div class="hidden md:block text-right">
                    <p class="text-sm text-gray-600">Bem-vindo,</p>
                    <p class="font-semibold text-gray-800" id="userName"><%= user.nome %></p>
                    <p class="text-xs text-gray-500" id="userType">
                        <%= user.tipo_usuario === 'administrador' ? 'Administrador' : 'Analista' %>
                    </p>
                </div>
                <button id="logoutBtn" class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-lg transition duration-200 flex items-center space-x-2">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Logout</span>
                </button>
                <% } %>
            </div>
        </div>
    </header>

    <div class="flex min-h-screen">
        <% if (user) { %>
        <!-- Sidebar -->
        <aside id="sidebar" class="bg-gray-800 text-white w-64 min-h-screen sidebar-transition transform -translate-x-full lg:translate-x-0 fixed lg:relative z-30">
            <nav class="mt-8">
                <div class="px-4 mb-8">
                    <div class="flex items-center space-x-3 p-3 bg-gray-700 rounded-lg">
                        <div class="w-10 h-10 bg-yellow-500 rounded-full flex items-center justify-center">
                            <i class="fas fa-user text-white"></i>
                        </div>
                        <div class="lg:block hidden">
                            <p class="font-semibold"><%= user.nome %></p>
                            <p class="text-xs text-gray-400">
                                <%= user.tipo_usuario === 'administrador' ? 'Administrador' : 'Analista' %>
                            </p>
                        </div>
                    </div>
                </div>

                <ul class="space-y-2 px-4">
                    <li>
                        <a href="/" class="flex items-center space-x-3 p-3 rounded-lg hover:bg-gray-700 transition duration-200 menu-item">
                            <i class="fas fa-home text-yellow-400"></i>
                            <span>Home</span>
                        </a>
                    </li>
                    
                    <li>
                        <div class="flex items-center justify-between p-3 rounded-lg hover:bg-gray-700 transition duration-200 cursor-pointer" onclick="toggleSubmenu('passwordsSubmenu')">
                            <div class="flex items-center space-x-3">
                                <i class="fas fa-key text-yellow-400"></i>
                                <span>Cofre de Senhas</span>
                            </div>
                            <i class="fas fa-chevron-down text-sm transform transition-transform duration-200" id="passwordsChevron"></i>
                        </div>
                        <ul id="passwordsSubmenu" class="ml-8 mt-2 space-y-1 hidden">
                            <li><a href="/senhas?categoria=prefeituras" class="block p-2 rounded hover:bg-gray-700 transition duration-200">Prefeituras</a></li>
                            <li><a href="/senhas?categoria=fornecedores" class="block p-2 rounded hover:bg-gray-700 transition duration-200">Fornecedores</a></li>
                            <li><a href="/senhas?categoria=orgaos" class="block p-2 rounded hover:bg-gray-700 transition duration-200">Órgãos Governamentais</a></li>
                            <li><a href="/senhas?categoria=b2fleet" class="block p-2 rounded hover:bg-gray-700 transition duration-200">B2Fleet e Locadoras</a></li>
                        </ul>
                    </li>

                    <li>
                        <a href="/localidades" class="flex items-center space-x-3 p-3 rounded-lg hover:bg-gray-700 transition duration-200 menu-item">
                            <i class="fas fa-map-marker-alt text-yellow-400"></i>
                            <span>Localidades</span>
                        </a>
                    </li>

                    <% if (user.tipo_usuario === 'administrador') { %>
                    <li>
                        <a href="/usuarios" class="flex items-center space-x-3 p-3 rounded-lg hover:bg-gray-700 transition duration-200 menu-item">
                            <i class="fas fa-users text-yellow-400"></i>
                            <span>Usuários</span>
                        </a>
                    </li>
                    <% } %>
                </ul>
            </nav>
        </aside>

        <!-- Overlay for mobile -->
        <div id="sidebarOverlay" class="fixed inset-0 bg-black bg-opacity-50 z-20 lg:hidden hidden"></div>
        <% } %>

        <!-- Main Content -->
        <main class="flex-1 p-6">
            <!-- Loading indicator -->
            <div id="loadingIndicator" class="loading fixed top-4 right-4 bg-yellow-500 text-white px-4 py-2 rounded-lg shadow-lg z-50">
                <i class="fas fa-spinner fa-spin mr-2"></i>
                Carregando...
            </div>

            <!-- Alert container -->
            <div id="alertContainer"></div>

            <!-- Page content -->
            <%- body %>
        </main>
    </div>

    <!-- Scripts -->
    <script src="/js/app.js"></script>
    <script>
        // Configurações globais
        window.APP_CONFIG = {
            user: <%- JSON.stringify(user || null) %>,
            apiUrl: '/api'
        };
    </script>
    <%- script %>
</body>
</html>

